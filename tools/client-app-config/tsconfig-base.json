{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2019", "dom", "es2020.string"],

    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,

    "typeRoots": ["utils/assets/@types", "./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule" : true,
    "baseUrl": ".",
    "paths": {
      "~client/*": ["src/*"]
    }
  },
  "include": ["src"]
}
